%div{class: 'lg:p-36 md:p-52 sm:20 p-8 w-full lg:w-1/2'}
  %h1.text-2xl.font-semibold.b-4 Se Connecter
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .flex.flex-col.gap-5
      = f.input :email, required: false, autofocus: true,input_html: { autocomplete: "email" }
      = f.input :password,required: false,input_html: { autocomplete: "current-password" }
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    .flex.justify-center.mt-4
      = f.button :submit, "Se connecter", class: 'bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-500'

  .flex.flex-col.justify-center.mt-8
    = render "devise/shared/links"
