.container.py-5.col-lg-4
  .card.shadow
    .card-header
      %h1.fs-3.fw-semibold Se Connecter
    .card-body
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .d-flex.flex-column.align-items-center
          .d-flex.flex-column
            = f.label :email
            = f.input :email, required: true, placeholder: 'email@exemple.com', label: false
          .d-flex.flex-column
            = f.label :password
            = f.input :password, required: true, label: false
        .row.mt-4
          = f.button :submit, "Se connecter", class: 'btn btn-primary btn-sm'

    
