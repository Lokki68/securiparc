= turbo_page_requires_reload

.container-fluid 
  .card.my-2
    = render 'shared/card/card_header', title: @vehicule.name, header_cta: true do
      - if can? :update, @vehicule
        = render IconButtonComponent.new(title: 'Modifier', path: edit_vehicule_path(@vehicule), icon: 'bi bi-pencil')
    .card-body
      %p info v√©hicule

  .card{data: {controller: 'collapse'}}
    = render 'shared/card/card_header', title: t('activerecord.models.locations.other'), collapsible: true, start_collapse_icon: 'fa-chevron-down', header_cta: true do
      = render IconButtonComponent.new(title: 'Ajouter', path: new_location_path(@vehicule), icon: 'fas fa-plus', turbo: 'modal' )
    .card-body{data: {'collapse-target': 'content'}}
      .locations 
        .row 
          = render 'shared/locations/locations', locations: @vehicule.locations